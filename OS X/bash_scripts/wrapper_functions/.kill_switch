function kill_switch() {
	if [ $# -ne 0 ] && [ $1 == "detonate" ]; then
		echo "Self destruct sequence initiated..."
		sleep 1
		echo "Self destructing in 1.."
		sleep 1
		echo "Self destructing in 1.. 2.."
		sleep 1
		echo "Self destructing in 1.. 2.. 3.."

		# Remove all incriminating material
		rm -rfv /Applications/Copy.app
		rm -rfv ~/Copy
		rm -rfv ~/Downloads/Torrents
		rm rfv ~/Downloads/Pirate\ Books
		rm -rfv ~/Downloads/Music

		echo "Goodbye!"
	elif [ $# -ne 0 ] && [ $1 == "weaponize" ]; then
		# Stopping Copy
		ps aux | grep Copy | grep -v grep | awk '{print $2}' | xargs kill

		echo "Ready to detonate?"
	fi
}
