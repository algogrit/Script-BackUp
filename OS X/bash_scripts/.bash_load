echo "~/bash_scripts/.bash_load Loaded"

# Adding Bash Completion
source ~/bash_scripts/.bash_completion

# HOMEBREW
export PATH=/usr/local/bin:/usr/local/sbin:~/bin:~/Projects/experimental/bin:$PATH

# Experimental Install Path
export EXPERIMENTAL="~/Projects/experimental/bin"

# SUBVERSION
export PATH=/opt/subversion/bin:$PATH

# ADDING ~/bin TO THE PATH
export PATH="$HOME/bin:$PATH"

# HOME SWEET HOME
export JAVA_HOME="$(/usr/libexec/java_home)"
export HIVE_HOME=/usr/local/Cellar/hive/0.9.0/libexec
export ANDROID_SDK_ROOT=/usr/local/opt/android-sdk
export PYTHONPATH=/usr/local/lib/python2.7/site-packages:$PYTHONPATH

# TOMCAT OPTIONS
export CATALINA_OPTS="-Xms512m -Xmx2g -XX:PermSize=128m -XX:MaxPermSize=512m"

# ADDING HADOOP ENV
. /usr/local/Cellar/hadoop/1.1.1/libexec/conf/hadoop-env.sh 

# Programming Version Managers
. ~/.nvm/nvm.sh
. ~/.rvm/scripts/rvm
. ~/.svm/svm.sh
[[ -s $HOME/.pythonz/etc/bashrc ]] && source $HOME/.pythonz/etc/bashrc
export WORKON_HOME=$HOME/.pythonenvs
export PIP_VIRTUALENV_BASE=$WORKON_HOME
export PIP_RESPECT_VIRTUALENV=true

# Editor Configuration
export EDITOR="$HOME/bin/subl -w"

# Sourcing Z
. /usr/local/etc/profile.d/z.sh

# Show dirty state
export GIT_PS1_SHOWDIRTYSTATE=true

function parse_git_branch {
  echo "$(__git_ps1)"
}

# Formatting bash prompt
export PS1="\w:\$(parse_git_branch) $ "

# Show fortune
[[ "$PS1" ]] && fortune

