echo "~/bash_scripts/.bash_load Loaded"

# HOMEBREW
export PATH=/usr/local/bin:/usr/local/sbin:~/bin:~/Projects/experimental/bin:$PATH

# SUBVERSION
export PATH=/opt/subversion/bin:$PATH

# ADDING ~/bin TO THE PATH
export PATH="$HOME/bin:$PATH"

# HOME SWEET HOME
export JAVA_HOME="$(/usr/libexec/java_home)"
export HIVE_HOME=/usr/local/Cellar/hive/0.9.0/libexec
export ANDROID_SDK_ROOT=/usr/local/Cellar/android-sdk/r21
export GROOVY_HOME="/usr/local/Cellar/groovy/2.0.5/libexec"

# TOMCAT OPTIONS
export CATALINA_OPTS="-Xms512m -Xmx2g -XX:PermSize=128m -XX:MaxPermSize=512m"

# ADDING HADOOP ENV
. /usr/local/Cellar/hadoop/1.0.4/libexec/conf/hadoop-env.sh

# Programming Version Managers
. ~/.nvm/nvm.sh
. ~/.rvm/scripts/rvm
. ~/.svm/svm.sh
[[ -s $HOME/.pythonz/etc/bashrc ]] && source $HOME/.pythonz/etc/bashrc
export WORKON_HOME=$HOME/.pythonenvs
export PIP_VIRTUALENV_BASE=$WORKON_HOME
export PIP_RESPECT_VIRTUALENV=true

# Editor Configuration
export EDITOR="$HOME/bin/subl -w"
