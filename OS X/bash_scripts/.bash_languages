echo -e "\033[1;36m~/bash_scripts/.bash_languages Loaded\033[0m"

# JAVA GC Tuning
export set JAVA_OPTS="-Xms256m -Xmx1g"

# RUBY GC Tuning Options
## Optimized for Ruby 2
export RUBY_HEAP_MIN_SLOTS=1250000
export RUBY_FREE_MIN=12500
export RUBY_GC_MALLOC_LIMIT=30000000

## For 2.1
export RUBY_GC_HEAP_INIT_SLOTS=1250000
export RUBY_GC_HEAP_FREE_SLOTS=12500

# Set GNU Plot to use x11 by default
export GNUTERM=X11

# Setting the GO Path
export GOPATH=~/.go

# Language Version Managers
## rbenv
export RBENV_ROOT=/usr/local/var/rbenv # Create rubies in Brew
if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi # Enable shims and autocompletion

## nodenv
export PATH="$HOME/.nodenv/bin:$PATH"
eval "(nodenv init -)" > /dev/null

## pyenv
if which pyenv > /dev/null; then eval "$(pyenv init -)"; fi
