echo -e "\e[1;36m~/bash_scripts/.bash_custom_functions Loaded\e[0m"

function tssh(){
  ssh $* -t 'tmux a || tmux || /bin/bash'
}

function vagrantbox_status() {
  VAGRANT_VM_NAME_REGEX="_"
  NUM_VAGRANT_VMS=`VBoxManage list vms | egrep -e ${VAGRANT_VM_NAME_REGEX} | wc -l`
  NUM_RUNNING_VAGRANT_VMS=`VBoxManage list runningvms | egrep -e ${VAGRANT_VM_NAME_REGEX} | wc -l`

  echo ${NUM_RUNNING_VAGRANT_VMS} / ${NUM_VAGRANT_VMS} vagrant managed virtualbox VMs running right now
}
